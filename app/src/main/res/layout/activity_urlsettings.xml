<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"

    android:background="#ff2e2d2e"
    tools:context="com.example.codev.assignment1.URLSettingsActivity">




    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_height="fill_parent">



    <TextView android:text="Base Url"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:background="#e83f3f"
        android:textSize="23sp"
        android:textColor="#fff"
        android:layout_weight="1"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/roundedcorner2"
        >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"

            />


        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:padding="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edittextbackground2"
            android:hint="Url"
            android:fontFamily="sans-serif-light"
            android:textColor="#fff"
            android:id="@+id/et_url"
            android:textColorHint="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_seturl"
            android:layout_width="170dp"
            android:layout_height="0dp"

            android:layout_weight="1"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="0dp"
            fancy:fb_defaultColor="#e83f3f"
            fancy:fb_focusColor="#80e83f3f"
            android:fontFamily="sans-serif-light"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            android:gravity="center"
            fancy:fb_text="Set"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            />



    </LinearLayout>


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/circularview"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="125dp"
        >

        <ImageView
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:src="@drawable/settings3"
            android:padding="30dp"

            />
    </LinearLayout>

</FrameLayout>
