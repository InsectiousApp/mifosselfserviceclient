<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#e83f3f"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingBottom="60dp"
        android:src="@drawable/splashemployeewhite" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings3"
        android:visibility="gone"
        android:id="@+id/iv_settings"
        android:layout_alignParentRight="true"
        android:padding="10dp"
       android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingRight="30dp"
        android:paddingTop="120dp"
        android:paddingLeft="30dp"
        android:orientation="vertical" >


            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="15dp"
                android:background="@drawable/edittextbackground"
                android:hint="Username"
                android:fontFamily="sans-serif-light"
                android:textColor="#ff2e2d2e"
                android:id="@+id/et_username"
                android:textColorHint="#ff2e2d2e"
                android:textSize="18sp" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="45dp"
                   android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:background="@drawable/edittextbackground"
                android:hint="Password"
                android:fontFamily="sans-serif-light"
                android:textColor="#ff2e2d2e"
                android:id="@+id/et_password"
                android:textColorHint="#ff2e2d2e"
                android:textSize="18sp" />



        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_login"
            android:layout_width="170dp"
            android:layout_height="40dp"

            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="2dp"
            fancy:fb_defaultColor="#80ca1e1b"
            fancy:fb_focusColor="#ca1e1b"
            android:fontFamily="sans-serif-light"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            android:gravity="center"
            fancy:fb_text="Log In"
            fancy:fb_textColor="#FFFFFF"
            android:layout_gravity="center" />


    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Upscale"
        android:textSize="80dp"
        android:id="@+id/tv_upscale"
        android:textColor="#fff"
android:gravity="center"
        android:layout_below="@+id/iv_icon"
        />

</RelativeLayout>